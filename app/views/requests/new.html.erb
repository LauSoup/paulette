<div class="form-container">

  <div class="request-card">

  <h1>Please select the time period you wish to have <%= @hen.name %> 🐔 🥚</h1>

  <% if @hen.disponibility == false %>
    <p>Unfortunately, this hen is not available at the moment, please choose another one</p>
    <%= link_to "Dashboard", dashboard_path %>
  <% else %>
  <%= simple_form_for [ @hen, @request ] do |f| %>
    <%= f.input :beginning, label: 'From'%>

    <%= f.input :ending, label: 'To' %>
    <%= f.submit "Validate", class: "small-btn btn-yellow" %>
  <% end %>
  <% end %>
  </div>

 </div>
